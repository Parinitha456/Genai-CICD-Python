<project>
  <!-- Other project information -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>python3</executable>
          <arguments>
            <argument>-m</argument>
            <argument>unittest</argument>
            <argument>tests.test_main</argument> <!-- Module path for test file without .py extension -->
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
